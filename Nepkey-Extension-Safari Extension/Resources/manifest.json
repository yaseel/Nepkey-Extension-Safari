{
  "manifest_version": 3,
  "name": "NepKey",
  "version": "3.0",
  "description": "University Toolkit",
  "default_locale": "en",
  "icons": {
    "16": "images/icon16.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "128": "images/icon128.png"
    },
    "default_popup": "./index.html",
    "default_title": "NepKey"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://neptun.elte.hu/*",
    "https://canvas.elte.hu/*",
    "https://tms.inf.elte.hu/*",
    "https://idp.elte.hu/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://neptun.elte.hu/*",
        "https://canvas.elte.hu/*",
        "https://tms.inf.elte.hu/*",
        "https://idp.elte.hu/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ]
}
